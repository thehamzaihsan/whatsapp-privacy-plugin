{
    "manifest_version": 2,
    "name": "Whatsapp Privacy Plugin",
    "description": "A minimal extension for making sure your WhatsApp is hidden in public PCs.",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "browser_action": {
        "default_title": "Whatsapp Privacy Plugin",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "content_scripts": [{
        "js": ["foreground.js"],
        "css": ["foreground.css"],
        "matches": ["https://web.whatsapp.com/*"]
    }],
    "browser_specific_settings": {
        "gecko": {
            "id": "whatsapp-privacy@hamzaihsan.com"
        }
    }
}
